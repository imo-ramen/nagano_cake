<div class="container">
  <div class="row">
    <div class="col">
        <h4 style="background-color:grey;color:white;width:100px">ログイン</h4>
        <h5 style="background-color:grey;color:white;width:290px">会員の方はこちらからログイン</h5>

        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="field">
            <%= f.label :メールアドレス %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          </div>

          <div class="form-group">
            <%= f.label :パスワード %>
            <%= f.password_field :password, autocomplete: "current-password" %>
          </div>

          <div class="form-group">
            <%= f.submit "ログイン",class: 'btn btn-sm btn-primary' %>
          </div>
        <% end %>
        <p></p>
        <h4 style="background-color:grey;color:white;width:300px">会員登録がお済みでない方</h4>

        <%= link_to "こちら", new_customer_registration_path %><span>から新規登録を行ってください。</span>
    </div>
  </div>
</div>

