
<div class="container">
  <div class="row">
    <h5>配送先編集</h5>
  </div>
    <%= form_with model: @address,url: address_path(@address.id),method: :patch, local:true do |f| %>
    <div class="row form-group">
      <%= f.label :郵便番号（ハイフンなし） %>
      <%= f.text_field :postal_code %>
    </div>

    <div class="row form-group">
      <%= f.label :住所 %>
      <%= f.text_field :address %>
    </div>

    <div class="row form-group">
      <%= f.label :宛名 %>
      <%= f.text_field :name %>
    </div>

    <div class="row form-group">
    <%= f.submit "変更内容を保存", class: "btn btn-success" %>
    </div>

      <% end %>
  </div>
