<div class ="container">
  <div class ="row">
    <div class = "col">
      <p>配送先登録/一覧</p>

      <%= form_with model: @address,url: addresses_path,method: :post,local:true do |f| %>
        <div class="form-group">
          <%= f.label :郵便番号（ハイフンなし） %>
          <%= f.text_field :postal_code, class: 'form-control book_title' %>
        </div>
        <div class="form-group">
          <%= f.label :住所 %>
          <%= f.text_field :address, class: 'form-control book_body' %>
        </div>
        <div class="form-group">
          <%= f.label :宛名 %>
          <%= f.text_field :name, class: 'form-control book_body' %>
        </div>
        <div class="form-group">
          <%= f.submit "新規登録",class: 'btn btn-sm btn-success' %>
        </div>
      <% end %>


      <table class="table table-bordered">
        <thead>
          <tr>
            <th>郵便番号</th>
            <th>住所</th>
            <th>宛名</th>
            <th colspan="2"></th>
          </tr>
        </thead>
        <tbody>
          <% @addresses.each do |a| %>
          <tr>
            <td><%= a.postal_code %></td>
            <td><%= a.address %></td>
            <td><%= a.name %></td>
            <td><%= link_to "編集する", edit_address_path(a.id), class: "btn btn-sm btn-success" %></td>
            <td><%= link_to "消去する", address_path(a.id), method: :delete,class: "btn btn-sm btn-danger" %></td>
          </tr>
          <% end %>
        </tbody>
      </table>

    </div>
  </div>
</div>




