<div class="container">
  <h4 style="background-color:#EEEEEE;color:dark;display:inline">新規会員登録</h4>
  <div class="row">
    <div class="col"><br>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>

      <table class ="table table-borderless">
        <tr>
          <th>名前</th>
          <td>（姓)<%= f.text_field :last_name, :value => "小泉",autofocus: true %></td>
          <td>（名）<%= f.text_field :first_name, :value => "貴裕" %></td>
        </tr>
        <tr>
          <th>フリガナ</th>
          <td>（セイ）<%= f.text_field :last_name_kana, :value => "コイズミ" %></td>
          <td>（メイ）<%= f.text_field :first_name_kana, :value => "タカヒロ" %></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td><%= f.email_field :email, :value => "08033431635a@gmail.com" %></td>
        </tr>
        <tr>
          <th>   郵便番号（ハイフンなし）</th>
          <td><%= f.text_field :postal_code, :value => "1360073" %></td>
        </tr>
        <tr>
          <th>住所</th>
          <td><%= f.text_field :address, :value => "東京都江東区" %></td>
        </tr>
        <tr>
          <th>電話番号</th>
          <td><%= f.text_field :telephone_number, :value => "08033431635" %></td>
        </tr>
        <tr>
          <th>パスワード</th>
          <td>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %>文字以上)</em>
            <% end %>
            <%= f.password_field :password, :value => "koizumi"%>
          </td>
        </tr>
        <tr>
          <th>パスワード（確認用）</th>
          <td><%= f.password_field :password_confirmation, :value => "koizumi" %></td>
        </tr>
        <tr>
          <td><%= f.submit "新規登録",class: 'btn btn-sm btn-success' %></td>
        </tr>
      </table>
      <% end %>
      <p style="background-color:#EEEEEE;color:dark;display:inline">既に登録済みの方</p><br>
      <%= link_to "こちら", new_customer_session_path %><span>からログインしてください。</span>
    </div>
  </div>
</div>

