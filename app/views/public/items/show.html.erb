<div class="container">
   <h5 style="background-color:grey;color:white;width:80px">商品詳細</h5>
   <td><%= image_tag @item.get_item_image %></td>
   <div class='row'>
     <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
          <td><%= @item.name %></td>
          <td><%= @item.introduction %></td>
          <td>￥<%= @item.add_tax_price.to_s(:delimited) %></span>(税込)</td>
          <td>
            <%= form_with model: @cart_item, url: "/cart_items", method: :post , local:true do |f| %>
            <%= f.select :amount, *[1..100], include_blank: "個数選択" %>
            <%= f.hidden_field :item_id,value: @item.id %>
            <%= f.submit "カートに入れる" , class: "btn btn-sm btn-success" %>
            <% end %>
          </td>
      </div>
   </div>
</div>
