<div class ="container">
  <h3>商品一覧<small>(全</small><small><%= @items.count %></small><small>件)</small></h3>
  <div class="row">


<% @items.each do |item| %>
<div class="col-3 pr-4">

    <div><%= image_tag item.get_item_image %></div>
    <%= link_to item.name ,item_path(item.id) %>
    <p>￥<%= item.price %></p>


</div>
<% end %>


  </div>
</div>





