<div class="container">
  <div class="row">
    <div class="col">
      <h6>注文履歴一覧</h6>
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>注文日</th>
            <th>配送先</th>
            <th>注文商品</th>
            <th>支払金額</th>
            <th>ステータス</th>
            <th>注文詳細</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
          <tr>
            <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
            <td>
               〒<%= order.postal_code %>
               <%= order.address %>
               <%= order.name %>
            </td>
            <% order.order_item.each do |order_item| %>
              <td><%= order_item.item.name %></td>
            <% end %>
            <td><%= order.total_payment.to_s(:delimited) %>円</td>
            <td><%= order.status %></td>
            <td><%= link_to "表示する", order_path(order), class: "btn btn-success" %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
