<div class="container">
  <div class="row">
    <div class="col">
      <h6>注文履歴一覧</h6>
      <table class="table table-bordered">
        <tr>
          <th>注文日</th>
          <th>配送先</th>
          <th>注文商品</th>
          <th>支払金額</th>
          <th>ステータス</th>
          <th>注文詳細</th>
        </tr>
        <% @orders.each do |order| %>
        <tr>
          <td><%#日付け %></td>
          <td>
             〒<%= order.postal_code %>
             <%= order.address %>
             <%= order.name %>
          </td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>