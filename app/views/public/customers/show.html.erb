<div class="container">
  <div class="row">
    <div class="col">
      <h5 class="bg-light">マイページ</h5>
    </div>
  </div>

  <div class="row">
    <h5 class="font-weight-bold">登録情報</h5>
    <div class="col">
      <%= link_to "編集する", edit_customers_path, class: "btn btn-sm btn-success" %>
    </div>
    <%#　表　%>
      <table class="table table-bordered">
        <tr>
          <td class="bg-light" style="width:25%">氏名</td>
          <td><%= current_customer.last_name %> <%= current_customer.first_name %></td>
        </tr>
        <tr>
          <td class="bg-light">カナ</td>
          <td><%= current_customer.last_name_kana %> <%= current_customer.first_name_kana %></td>
        </tr>
        <tr>
          <td class="bg-light">郵便番号</td>
          <td><%= current_customer.postal_code %></td>
        </tr>
        <tr>
          <td class="bg-light">住所</td>
          <td><%= current_customer.address %></td>
        </tr>
        <tr>
          <td class="bg-light">電話番号</td>
          <td><%= current_customer.telephone_number %></td>
        </tr>
        <tr>
          <td class="bg-light">メールアドレス</td>
          <td><%= current_customer.email %></td>
        </tr>
      </table>

    <%#  配送先  %>
    <div class="row">
      <div class="col">
        <h5 class="font-weight-bold">配送先</h5>
        <h5 class="font-weight-bold">注文履歴</h5>
      </div>
    <%#  注文履歴  %>
       <div class="col">
        <%= link_to "一覧を見る", addresses_path, class: "btn btn-sm btn-primary" %>
        <%= link_to "一覧を見る", orders_path, class: "btn btn-sm btn-primary" %>
       </div>
    </div>
  </div>
</div>