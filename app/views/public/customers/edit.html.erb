<div class="container">
  <div class="row">
    <h5>会員情報編集</h5>
  </div>
  <%= form_with model:@customer, url: customers_path, method: :patch, local:true do |f| %>
    <div class="row form-group">
      <%= f.label :氏名 %>
      <%= f.text_field :last_name %>
      <%= f.text_field :first_name %>
    </div>
    <div class="row form-group">
      <%= f.label :フリガナ %>
      <%= f.text_field :last_name_kana %>
      <%= f.text_field :first_name_kana %>
    </div>

    <div class="row form-group">
      <%= f.label :郵便番号 %>
      <%= f.text_field :postal_code %>
    </div>

    <div class="row form-group">
      <%= f.label :住所 %>
      <%= f.text_field :address %>
    </div>

    <div class="row form-group">
      <%= f.label :電話番号 %>
      <%= f.text_field :telephone_number %>
    </div>

    <div class="row form-group">
      <%= f.label :メールアドレス %>
      <%= f.text_field :email %>
    </div>

    <div class="row form-group">
      <%= f.submit "編集内容を保存", class: "btn btn-success" %>
    </div>
  <% end %>

    <%= link_to "退会する", unsubscribe_customers_path, class: "btn btn-danger" %>
</div>
