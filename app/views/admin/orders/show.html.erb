<div class="container">
  <h5 style="background-color:grey;color:white;width:150px">注文履歴詳細</h5>
  <div ="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <table class="table">
          <tr>
            <td>購入者</td>
            <td><%= @order.name %></td>
          </tr>
          <tr>
            <td>注文日</td>
            <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
          </tr>
          <tr>
            <td>配送先</td>
            <td><%= @order.postal_code %> <%= @order.address %></td>
          </tr>
          <tr>
            <td>支払方法</td>
            <td><%= @order.payment_method %></td>
          </tr>
          <tr>
            <td>注文ステータス</td>
            <td>
              <%= form_with model: @order, url: admin_order_path(@order.id),method: :patch, local:true do |f| %>
                <%= f.select :status, Order.statuses.keys.to_a %>
                <%= f.submit "更新", class: "btn btn-sm btn-success" %>
              <% end %>
            </td>
          </tr>
        </table>
      </div>
  </div>

  <div class="row">
    <div class="col-md-8">
      <table class='table'>
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価（税込）</th>
            <th>数量</th>
            <th>小計</th>
            <th>製作ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% sum = 0 %>
          <% @order_details.each do |order_detail| %>
            <tr>
              <td><%= order_detail.item_id.name %></td>
              <td><%= order_detail.add_tax.price.to_s(:delimited) %></td>
              <td><%= order_detail.amount %></td>
              <td><%= order.subtotal.to_s(:delimited) %></td>
              <td>
                <%= form_with model: order_detail, url: admin_order_orders_detail_path(order_detail.id),method: :patch, local:true do |f| %>
                  <%= f.select :making_status, Order_detail.making_statuses.keys.to_a %>
                  <%= f.submit "更新", class: "btn btn-sm btn-success" %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <div class="col-md-4">
　　　<table class="table">
        <tr>
          <th>商品合計</th>
          <td><%= sum.to_s(:delimited) %>円</td>
        </tr>
        <tr>
          <th>送料</th>
          <td>800円</td>
        </tr>
        <tr>
        　<th>請求金額合計</th>
          <td><%= (sum + 800).to_s(:delimited) %>円</td>
        </tr>
      </table>
    </div>
  </div>
</div>