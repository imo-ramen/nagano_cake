<div class="container">
 <h2>商品新規登録</h2>

  <div class="row mt-10">
    <div>
     <%= form_with model: @item, local:true do |f| %>
      <div class="form-group">
        <span>商品画像</span><%= file_field :item_image, accept: "image/*" %>
      </div>
      <div class="form-group">
        <span>商品名</span><%= f.text_field :name, placeholder:"商品名" %>
      </div>
      <div class="form-group">
        <span>商品説明</span><%= f.text_area :introduction, placeholder:"ここに説明文を記述します" %>
      </div>
      <div class="form-group">
        <span>ジャンル</span>
      </div>
      <div class="form-group">
        <span>税抜価格</span><%= f.text_field :price, placeholder:"1000" %><span>円</span>
      </div>
      <div class="form-group">
        <span>販売ステータス</span>
      </div>
      <div class="form-group">
        <%= f.submit "新規登録", class:"btn btn-success" %>
      </div>
    <% end %>
   </div>
  </div>
</div>