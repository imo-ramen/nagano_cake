<div class="container">
   <h5 style="background-color:grey;color:white;width:80px">商品詳細</h5>
   <div class="row">
      <%= image_tag @item.get_item_image %>
   </div>

   <div class='row'>
     <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
          <div>商品名<%= @item.name %></div>
          <div>商品説明<%= @item.introduction %></div>
          <div>ジャンル<%= @item.genre.name %></div>
          <div>税込価格（税抜価格）<%= @item.add_tax_price.to_s(:delimited) %><span>（<%= @item.price.to_s(:delimited) %>）</span>円</div>
          <div>
            販売ステータス
            <% if @item.is_active == true %>
              <%= "販売中" %>
            <% else %>
              <%= "販売停止中" %>
            <% end %>
          </div>
          <div><%= link_to '編集する', edit_admin_item_path(@item), class: "btn btn-sm btn-success edit_admin_item_#{@item.id}" %></div>
      </div>
   </div>
</div>