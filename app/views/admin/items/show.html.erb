<div class="container">
   <h6 style="background-color:#EEEEEE;color:dark;display:inline">商品詳細</h6>
   <div class="row">
    <div class="col-3 px-sm-0 mx-auto">
      <% if @item.item_image.attached? %>
        <%= image_tag @item.item_image, size: "200x150" %>
      <% else %>
        <%= image_tag 'no_image.jpg', size: "200x200" %>
      <% end %>
    </div>
    <div class="col-9 px-5 px-sm-0 mx-auto">
      <table class="table table-borderless">
        <tr>
          <td>商品名</td>
          <td><%= @item.name %></td>
        </tr>
        <tr>
          <td>商品説明</td>
          <td><%= @item.introduction %></td>
        </tr>
        <tr>
          <td>ジャンル</td>
          <td><%= @item.genre.name %></td>
        </tr>
        <tr>
          <td>税込価格（税抜価格）</td>
          <td><%= @item.add_tax_price.to_s(:delimited) %><span>（<%= @item.price.to_s(:delimited) %>）</span>円</td>
        </tr>
        <tr>
          <td>販売ステータス</td>
          <td><% if @item.is_active == true %>
          <p class="font-weight-bold text-success">
            <%= "販売中" %>
          </p>
          <% else %>
          <p class="text-secondary">
            <%= "販売停止中" %>
            </p>
          <% end %>
          </td>
        </tr>
        <tr>
          <td><%= link_to '編集する', edit_admin_item_path(@item), class: "btn btn-sm btn-success edit_admin_item_#{@item.id}" %></td>
        </tr>
       </table>
      </div>
   </div>
</div>