<div class="container">
   <h5 style="background-color:grey;color:white;width:80px">商品詳細</h5>

   <td><%= image_tag @item.get_item_image %></td>

   <div class='row'>
     <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
          <td>商品名<%= @item.name %></td>
          <td>商品説明<%= @item.introduction %></td>
          <td>ジャンル<%= @item.genre.name %></td>
          <td>税込価格（税抜価格）<%= @item.add_tax_price.to_s(:delimited) %><span>（<%= @item.price.to_s(:delimited) %>）</span>円</td>
          <td>
            販売ステータス
            <%#=  @item.is_active == true %>
          </td>
          <td><%= link_to '編集する', edit_admin_item_path(@item), class: "btn btn-sm btn-success edit_admin_item_#{@item.id}" %></td>
      </div>
   </div>
</div>