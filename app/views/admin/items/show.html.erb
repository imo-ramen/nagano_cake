<div class="container">
   <h5 style="background-color:grey;color:white;width:80px">商品詳細</h5>
   <div class="row">
    <% if @item.item_image.attached? %>
      <%= image_tag @item.item_image, size: "100x100" %>
    <% else %>
      <%= image_tag 'no_image.jpg', size: "200x200" %>
    <% end %>
    
    
   </div>
   <div class='row'>
     <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <table class="table">
          <tr>
            <td>商品名</td>
            <td><%= @item.name %></td>
          </tr>
          <tr>
            <td>商品説明</td>
            <td><%= @item.introduction %></td>
          </tr>
          <tr>
            <td>ジャンル</td>
            <td><%= @item.genre.name %></td>
          </tr>
          <tr>
            <td>税込価格（税抜価格）</td>
            <td><%= @item.add_tax_price.to_s(:delimited) %><span>（<%= @item.price.to_s(:delimited) %>）</span>円</td>
          </tr>
          <tr>
            <td>販売ステータス</td>
            <td><% if @item.is_active == true %>
              <%= "販売中" %>
            <% else %>
              <%= "販売停止中" %>
            <% end %>
            </td>
          </tr>
          <tr>
            <td><%= link_to '編集する', edit_admin_item_path(@item), class: "btn btn-sm btn-success edit_admin_item_#{@item.id}" %></td>
          </tr>
        </table>
      </div>
   </div>
</div>