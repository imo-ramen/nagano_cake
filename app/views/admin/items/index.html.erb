<div class="container">
  <h5 style="background-color:grey;color:dark;width:80px">商品一覧</h5>

  <%= link_to new_admin_item_path, class: 'nav-link' do %>
    <i class='fa-solid fa-circle-plus'></i>
  <% end %>

  <table class='table'>
      <thead class="bg-light text-dark">
        <tr>
          <th>商品ID</th>
          <th>商品名</th>
          <th>税抜価格</th>
          <th>ジャンル</th>
          <th>ステータス</th>
        </tr>
      </thead>
    <tbody>
      <% @items.each do |item| %>
        <tr>
          <td><%= item.id %></td>
          <td>
            <%= link_to item.name ,admin_item_path(item.id) %>
          </td>
          <td><%= item.price.to_s(:delimited) %></td>
          <td><%= item.genre.name %></td>
          <td>
            <% if item.is_active == true %>
            <p class="font-weight-bold text-success">
              <%= "販売中" %>
            </p>
            <% else %>
            <p class="text-secondary">
              <%= "販売停止中" %>
            </p>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>