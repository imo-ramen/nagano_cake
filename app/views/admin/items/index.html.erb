<div class="container">
  <h6 style="background-color:#EEEEEE;color:dark;display:inline">商品一覧</h6>

  <div class="text-right">
    <%= link_to new_admin_item_path, class: 'nav-link text-primar' do %>
      <i class='fa-solid fa-circle-plus fa-2x'></i>
    <% end %>
  </div>

  <table class='table'>
      <thead class="bg-light text-dark">
        <tr>
          <th>商品ID</th>
          <th>商品名</th>
          <th>税抜価格</th>
          <th>ジャンル</th>
          <th>ステータス</th>
        </tr>
      </thead>
    <tbody>
      <% @items.each do |item| %>
        <tr>
          <td><%= item.id %></td>
          <td>
            <p class="text-primary">
              <%= link_to item.name ,admin_item_path(item.id) %>
            </p>
          </td>
          <td><%= item.price.to_s(:delimited) %></td>
          <td><%= item.genre.name %></td>
          <td>
            <% if item.is_active == true %>
            <p class="font-weight-bold text-success">
              <%= "販売中" %>
            </p>
            <% else %>
            <p class="text-secondary">
              <%= "販売停止中" %>
            </p>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>