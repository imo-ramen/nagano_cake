<div class="container">
  <h6 style="background-color:#EEEEEE;color:dark;display:inline">ジャンル編集</h6>
  <div class="row">
    <%= form_with model: @genre, url: admin_genre_path(@genre.id), method: :patch do |f| %>
    <table class='table table-borderless'>
        <thead>
          <tr>
            <th><%= f.label :name,"ジャンル名" %></th>
            <th><%= f.text_field :name, class: 'form-control book_title' %></th>
            <th><%= f.submit "変更を保存",class: 'btn btn-success' %></th>
          </tr>
        </thead>
        <% end %>
    </table>
  </div>
</div>