<div class="container">
  <div class="row">
    <h6 style="background-color:#EEEEEE;color:dark;display:inline"><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集</h6>
  </div>

    <div class="row">
     <label for="id" class="col-sm-2">会員ID</label>
     <div class="col-sm-10">
      <%= @customer.id %>
     </div>
    </div>

  <%= form_with model: @customer, url: admin_customer_path, method: :patch, local:true do |f| %>
    <div class="form-group">
      <div class="row">
        <label for="name" class="col-sm-2 col-form-label">氏名</label>
        <div class="col-sm-10">
          <%= f.text_field :last_name %>
          <%= f.text_field :first_name %>
        </div>
      </div>
    </div>

    <div class="form-group">
      <div class="row">
        <label for="name_kana" class="col-sm-2 col-form-label">フリガナ</label>
        <div class="col-sm-10">
          <%= f.text_field :last_name_kana %>
          <%= f.text_field :first_name_kana %>
        </div>
      </div>
    </div>

    <div class="form-group">
      <div class="row">
        <label for="postal_code" class="col-sm-2 col-form-label">郵便番号</label>
        <div class="col-sm-10">
          <%= f.text_field :postal_code %>
        </div>
      </div>
    </div>

    <div class="form-group">
      <div class="row">
        <label for="address" class="col-sm-2 col-form-label">住所</label>
        <div class="col-sm-10">
          <%= f.text_area :address %>
      </div>
    </div>

    <div class="form-group">
      <div class="row">
        <label for="number" class="col-sm-2 col-form-label">電話番号</label>
        <div class="col-sm-10">
          <%= f.text_field :telephone_number %>
        </div>
       </div>
    </div>

    <div class="form-group">
      <div class="row">
        <label for="mail" class="col-sm-2 col-form-label">メールアドレス</label>
        <div class="col-sm-10">
          <%= f.text_field :email %>
        </div>
      </div>
    </div>

    <div class="form-group">
      <div class="row">
        <label for="status" class="col-sm-4">会員ステータス</label>
        <div class="col-sm-8">
          <%= f.radio_button :is_deleted, false %>
          <%= f.label :is_deleted, '有効', value: false %>
          <%= f.radio_button :is_deleted, true %>
          <%= f.label :is_deleted, '退会', value: true %>
        </div>
      </div>
    </div>

    <div class="form-group">
      <%= f.submit "変更を保存", class: "btn btn-success" %>
    </div>
  <% end %>
</div>
</form>